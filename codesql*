-- Drop tables if they already exist to avoid conflicts
DROP TABLE IF EXISTS Appointments;
DROP TABLE IF EXISTS Patients;
DROP TABLE IF EXISTS Doctors;

-- Create Tables
CREATE TABLE Patients (
    PatientID INT PRIMARY KEY,
    Name VARCHAR(50),
    Age INT,
    Gender VARCHAR(10),
    Contact VARCHAR(15),
    Address VARCHAR(100)
);

CREATE TABLE Doctors (
    DoctorID INT PRIMARY KEY,
    Name VARCHAR(50),
    Specialty VARCHAR(50),
    Contact VARCHAR(15)
);

CREATE TABLE Appointments (
    AppointmentID INT PRIMARY KEY,
    PatientID INT,
    DoctorID INT,
    AppointmentDate DATE,
    StartTime TIME,
    EndTime TIME,
    Notes TEXT,
    FOREIGN KEY (PatientID) REFERENCES Patients(PatientID),
    FOREIGN KEY (DoctorID) REFERENCES Doctors(DoctorID)
);

-- Insert Data
INSERT INTO Patients (PatientID, Name, Age, Gender, Contact, Address)
VALUES
    (1, 'John Doe', 35, 'Male', '1234567890', '123 Main St'),
    (2, 'Jane Smith', 28, 'Female', '0987654321', '456 Elm St');

INSERT INTO Doctors (DoctorID, Name, Specialty, Contact)
VALUES
    (1, 'Dr. Smith', 'Cardiologist', '1112223333'),
    (2, 'Dr. Johnson', 'Pediatrician', '4445556666');

INSERT INTO Appointments (AppointmentID, PatientID, DoctorID, AppointmentDate, StartTime, EndTime, Notes)
VALUES
    (1, 1, 1, '2024-05-17', '10:00:00', '11:00:00', 'Heart checkup'),
    (2, 2, 2, '2024-05-18', '09:30:00', '10:30:00', 'Routine checkup');

-- Retrieve Data
SELECT * FROM Patients;
SELECT * FROM Doctors;
SELECT * FROM Appointments;
SELECT * FROM Appointments WHERE PatientID = 1;
SELECT * FROM Appointments WHERE DoctorID = 1;
SELECT * FROM Appointments WHERE AppointmentDate = '2024-05-17';

-- Update and Delete Data
UPDATE Patients SET Age = 36 WHERE PatientID = 1;
DELETE FROM Appointments WHERE AppointmentID = 1;
